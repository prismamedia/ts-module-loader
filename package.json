    "build:commonjs": "tsc -b ./tsconfig.commonjs.json",
    "build:module": "tsc -b ./tsconfig.module.json",
    "build": "yarn run build:clean && yarn run build:commonjs && yarn run build:module",
    "prettier": "prettier --write \"**/*.ts\""
